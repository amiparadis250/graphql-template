{
  "name": "legacy-vault",
  "private": true,
  "description": "The starter code for the Ami Paradis boilerplate to GraphQL with TypeScript ",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amiparadis250/graphql-template.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "compile": "tsc",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "start": "npm run compile && nodemon ./src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@parcel/watcher": "^2.4.0",
    "apollo-server": "^3.13.0",
    "dotenv": "^16.4.5",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "mongoose": "^8.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.0.3",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  }
}
